<schema xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:noNamespaceSchemaLocation="urn:magento:framework:Setup/Declaration/Schema/etc/schema.xsd">
    <table name="alevel_quick_order" resource="default" engine="innodb" comment="Alevel_QuickOrder">
        <column xsi:type="int"
                name="order_id"
                padding="10"
                unsigned="true"
                nullable="false"
                identity="true"
                comment="ID"/>
        <column xsi:type="varchar"
                name="name"
                length="32"
                nullable="false"
                comment="User name"
        />
        <column xsi:type="varchar"
                name="sku"
                length="32"
                nullable="false"
                comment="SKU"
        />
        <column xsi:type="int"
                name="phone"
                padding="3"
                unsigned="true"
                nullable="false"
                identity="false"
                comment="User phone"
        />
        <column xsi:type="varchar"
                name="email"
                length="32"
                nullable="false"
                comment="User email"
        />
        <column xsi:type="varchar"
                name="status"
                length="32"
                nullable="false"
                comment="status"
        />
        <constraint xsi:type="primary" referenceId="PRIMARY">
            <column name="order_id"/>
        </constraint>
    </table>
    </schema>
